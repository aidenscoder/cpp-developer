{
    "code-runner.clearPreviousOutput": true,
    "code-runner.runInTerminal": true,
    "code-runner.executorMap": {
        "c": "gcc $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe && rm $fileNameWithoutExt.exe",
        "cpp": "g++ $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe && rm $fileNameWithoutExt.exe"
    }
}